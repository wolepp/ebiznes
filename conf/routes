GET           /                            controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                controllers.Assets.versioned(path="/public", file: Asset)

# Basket api
GET           /api/cart                    controllers.CartController.index()
GET           /api/cart/:id                controllers.CartController.get(id: Int)
POST          /api/cart                    controllers.CartController.create()
PUT           /api/cart/:id                controllers.CartController.update(id: Int)
DELETE        /api/cart/:id                controllers.CartController.delete(id: Int)

